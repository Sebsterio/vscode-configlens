{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"lib": ["ES6"],
		"outDir": "out",
		"rootDir": "src",
		"baseUrl": ".",
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts", ".eslintrc.js"]
}
