{
	"name": "vscode-configlens",
	"displayName": "Config Lens",
	"description": "Improved visibility and controls of shared global settings in Visual Studio Code",
	"publisher": "Sebster",
	"version": "0.0.1",
	"preview": true,
	"icon": "images/configlens-icon.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"settings.json",
		"applyToAllProfiles",
		"apply to all profiles"
	],
	"activationEvents": [
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"contributes": {
		"configuration": {
			"id": "configLens",
			"title": "Config Lens",
			"properties": {
				"configLens.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enables/disables all config lenses"
				}
			}
		},
		"commands": [
			{
				"category": "Config Lens",
				"title": "Toggle Global Option",
				"command": "vscode-configlens.setIsSharedOption"
			}
		]
	},
	"engines": {
		"vscode": ">=1.83.0"
	},
	"main": "./out/extension",
	"files": [
		"images",
		"out"
	],
	"scripts": {
		"lint": "eslint src/**/*.ts",
		"format": "prettier src/**/*.ts --write",
		"compile": "rm -rf out/* && tsc -p ./",
		"watch": "rm -rf out/* && tsc -watch -p ./",
		"vscode:prepublish": "npm run compile"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.5",
		"@types/node": "^20.11.25",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@typescript-eslint/typescript-estree": "^7.1.1",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"prettier": "^3.2.5",
		"typescript": ">=4.7.4 <5.4.0"
	},
	"license": "SEE LICENSE.txt",
	"homepage": "https://github.com/Sebsterio/vscode-configlens",
	"repository": {
		"type": "git",
		"url": "https://github.com/Sebsterio/vscode-configlens"
	},
	"bugs": {
		"url": "https://github.com/Sebsterio/vscode-configlens/issues"
	},
	"author": {
		"name": "Sebastian Rosloniec",
		"url": "https://sebster.dev",
		"email": "sebster.main@gmail.com"
	}
}
